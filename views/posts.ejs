<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Of Post</title>
    <style>
        h1 {
            margin-left: 40px;
        }
        .right-element {
            margin-bottom: 30px;
            float: right;
            margin-top: -50px;
            margin-right: 40px;
        }

        .right-element > a, form {
            display: inline;
        }

        .right-element > a {
            margin-right: 20px;
            text-decoration: none;
            color: white;
            padding: 5px;
            background-color: rgb(248, 53, 53);
            border-radius: 3px;
        }

        .right-element > form {
            margin-right: 20px;
        }

        .img-section > img {
            width: 800px;
            height: 500px;
        }

        .post-container {
            border-radius: 10px;
            box-shadow: 8px 10px 23px 0px rgba(153,153,153,0.36);
            -webkit-box-shadow: 8px 10px 23px 0px rgba(153,153,153,0.36);
            -moz-box-shadow: 8px 10px 23px 0px rgba(153,153,153,0.36);
            width: 800px;
            box-sizing: border-box;
            margin: 0px auto;
            margin-bottom: 40px;
        }

        .caption-section {
            width: 800px;
        }

        .content-section {
            padding: 10px;
            margin-top: -20px;
        }

        .like-btn {
            text-decoration: none;
            color: rgb(248, 53, 53);
            border: 0.5px solid rgb(248, 53, 53);
            padding: 5px;
            border-radius: 2px;
        }

        .like-btn:hover {
            background-color: rgb(248, 53, 53);
            color: white;
            transition: 0.5s all;
        }


        .edit-btn {
            text-decoration: none;
            color: rgb(203, 203, 29);
            border: 0.5px solid rgb(238, 238, 45);
            padding: 5px;
            border-radius: 2px;
        }

        .edit-btn:hover {
            background-color: rgb(238, 238, 45);
            color: white;
            transition: 0.5s all;
        }

        .sort-btn {
            border: none;
            background-color: rgb(248, 53, 53);
            color: white;
            padding: 5px;
            border-radius: 3px;
        }

        .back-btn, .del-btn {
            margin-left: 40px;
            text-decoration: none;
            color: white;
            background-color: rgb(248, 53, 53);
            padding: 5px;
            border-radius: 3px;
        }

        .del-btn {
            margin-left: 0;
        }

        .action-btn {
            float: right;
            margin-top: -50px;
        }

        .profile-header {
            padding: 10px;
        }

        .profile-picture {
            width: 50px;
            height: 45px;
            border-radius: 100%;
        }

        .profile-header > h3 {
            display: block;
            margin-top: -40px;
            margin-left: 60px;
            font-size: 20px;
        }

    </style>
</head>
<body>
    <h1><%= data[0].User.username %>'s Post</h1>
    <a href="/user/<%= UserId %>" class="back-btn">Back</a>
    <div class="right-element">
        <a href="/user/<%= UserId %>/posts/add">Add Post</a>
        <form action="/user/<%= UserId %>/posts" method="get">
            <label for="">Sort By :</label>
            <button type="submit" name="sort" value="like" class="sort-btn">Like</button>
        </form>
    </div>

    <% data.forEach(el => { %>
        <div class="post-container">
            <div class="profile-header">
                <img src="<%= el.User.Profile.profileImgurl %>" alt="Profile Picture" class="profile-picture">
                <h3><%= el.User.username %></h3>
            </div>
            <div class="img-section">
                <img src="<%= el.imgUrl %>" alt="Picture of Post">
            </div>

            <div class="content-section">
                <div class="like-section">
                    <p><span class="like-icon">❤️</span><%= el.like %></p>
                    <a href="/user/<%= UserId %>/posts/like/<%= el.id %>" class="like-btn">Like</a>
                </div>

                <div class="action-btn">
                    <a href="/user/<%= UserId %>/posts/edit/<%= el.id %>" class="edit-btn">Edit</a>
                    <a href="/user/<%= UserId %>/posts/delete/<%= el.id %>" class="del-btn">Delete</a>
                </div>
    
                <div class="caption-section">
                    <p><%= el.caption %></p>
                </div>
            </div>
        </div>
    <% }) %>
</body>
</html>